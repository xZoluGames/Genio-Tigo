<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        xmlns:tools="http://schemas.android.com/tools"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:padding="@dimen/default_padding"        android:background="@drawable/gradient_background">

    <ImageButton
            android:layout_width="45dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/bt"
            android:id="@+id/bt"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-10dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:singleLine="false"
            android:hint="Seleccione el Servicio a Utilizar..."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/print"
            app:layout_constraintHorizontal_bias="0.326"
            android:ellipsize="end"
            android:scrollHorizontally="false"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    <ImageButton
            android:layout_width="58dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/impresora"
            android:id="@+id/print"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintVertical_bias="0.333"
            app:layout_constraintEnd_toStartOf="@+id/stats"
            android:tint="#00FFFFFF"
            android:backgroundTint="#00FFFFFF" />

    <ImageButton
            android:layout_width="45dp"
            android:layout_height="53dp"
            app:srcCompat="@android:drawable/ic_menu_today"
            android:id="@+id/stats"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintVertical_bias="0.333"
            app:layout_constraintEnd_toStartOf="@+id/settings"
            android:tint="#00FFFFFF"
            android:backgroundTint="#00FFFFFF" />

    <ImageButton
            android:layout_width="45dp"
            android:layout_height="53dp"
            app:srcCompat="@android:drawable/ic_menu_preferences"
            android:id="@+id/settings"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintVertical_bias="0.333"
            app:layout_constraintEnd_toStartOf="@+id/bt"
            android:tint="#00FFFFFF"
            android:backgroundTint="#00FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>

