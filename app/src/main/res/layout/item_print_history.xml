<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="6dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <!-- Service Icon -->
        <FrameLayout
                android:id="@+id/iconContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <View
                    android:id="@+id/iconBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/icon_background" />

            <ImageView
                    android:id="@+id/serviceIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/tigo" />

        </FrameLayout>

        <!-- Service Name -->
        <TextView
                android:id="@+id/textViewService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Giros Tigo"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/md_theme_light_onSurface"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/buttonMore"
                app:layout_constraintStart_toEndOf="@+id/iconContainer"
                app:layout_constraintTop_toTopOf="@+id/iconContainer" />

        <!-- Date and Time -->
        <TextView
                android:id="@+id/textViewDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="15/01/2024 14:30:25"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                app:layout_constraintEnd_toStartOf="@+id/buttonMore"
                app:layout_constraintStart_toEndOf="@+id/iconContainer"
                app:layout_constraintTop_toBottomOf="@+id/textViewService" />

        <!-- More Options Button -->
        <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMore"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_more"
                app:iconTint="@color/md_theme_light_onSurfaceVariant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <!-- Divider -->
        <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/md_theme_light_outline"
                android:alpha="0.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconContainer" />

        <!-- Transaction Details -->
        <LinearLayout
                android:id="@+id/detailsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider">

            <!-- Amount Row -->
            <LinearLayout
                    android:id="@+id/amountRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monto:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                <TextView
                        android:id="@+id/textViewAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="50,000 Gs."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:textStyle="bold"
                        android:gravity="end" />

            </LinearLayout>

            <!-- Phone Row -->
            <LinearLayout
                    android:id="@+id/phoneRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                <TextView
                        android:id="@+id/textViewPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:gravity="end"
                        android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Cedula Row -->
            <LinearLayout
                    android:id="@+id/cedulaRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cédula:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                <TextView
                        android:id="@+id/textViewCedula"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:gravity="end"
                        android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Monto Row (Updated) -->
            <LinearLayout
                    android:id="@+id/montoRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monto:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                <TextView
                        android:id="@+id/textViewMonto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:textStyle="bold"
                        android:gravity="end" />

            </LinearLayout>

            <!-- Reference 1 Row -->
            <LinearLayout
                    android:id="@+id/reference1Row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Referencia 1:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                <TextView
                        android:id="@+id/textViewReference1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/status_info"
                        android:gravity="end"
                        android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Reference 2 Row -->
            <LinearLayout
                    android:id="@+id/reference2Row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Referencia 2:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                <TextView
                        android:id="@+id/textViewReference2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/status_info"
                        android:gravity="end"
                        android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Legacy Reference Row (kept for backward compatibility) -->
            <LinearLayout
                    android:id="@+id/legacyReferenceRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Referencia:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                <TextView
                        android:id="@+id/textViewReference"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="GT12345678"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/status_info"
                        android:gravity="end"
                        android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Status Row -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                <com.google.android.material.chip.Chip
                        android:id="@+id/statusChip"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Completado"
                        app:chipBackgroundColor="@color/status_success"
                        app:chipCornerRadius="16dp"
                        app:chipStrokeWidth="0dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:chipMinHeight="28dp"
                        app:ensureMinTouchTargetSize="false" />

                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonReprint"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Reimprimir"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_print"
                        app:iconSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Expanded Message (Initially Hidden) -->
        <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/message_background"
                android:padding="12dp"
                android:text="Mensaje completo de la transacción..."
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                android:fontFamily="monospace"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailsContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>