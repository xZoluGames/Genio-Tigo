<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Modern Card Style -->
    <style name="ModernCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Modern Button Style -->
    <style name="ModernButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Modern Text Input Style -->
    <style name="ModernTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Glassmorphism Card Style -->
    <style name="GlassmorphismCard" parent="ModernCardStyle">
        <item name="cardBackgroundColor">@color/glass_background</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_border</item>
    </style>

</resources>